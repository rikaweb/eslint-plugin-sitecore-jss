{
  "name": "eslint-plugin-sitecore-jss",
  "version": "1.1.6",
  "description": "An ESLint plugin to enforce correct usage of Sitecore JSS components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .js,.ts,.tsx",
    "clean": "rimraf dist",
    "build": "tsc",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "eslint",
    "plugin",
    "sitecore",
    "sitecore-jss",
    "eslint-plugin",
    "typescript"
  ],
  "author": "Sohrab Saboori",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rikaweb/eslint-plugin-sitecore-jss.git"
  },
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": "^5.0.0 || ^6.0.0",
    "eslint": "^8.0.0",
    "typescript": ">=4.9.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/rule-tester": "^6.0.0",
    "@typescript-eslint/type-utils": "^6.0.0",
    "@typescript-eslint/utils": "^6.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "typescript": "~5.3.3"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "dist/**/*"
    ]
  }
}
